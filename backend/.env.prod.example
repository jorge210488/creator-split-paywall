# Backend production environment example (copy to backend/.env.prod and fill values)

PORT=3000
NODE_ENV=production

# Database (service hostname 'postgres')
DATABASE_URL=postgresql://admin:CHANGE_ME@postgres:5432/creator_split_db

# Redis (service hostname 'redis')
REDIS_URL=redis://redis:6379/0

# Blockchain ingestion
ETH_RPC_URL=
CONTRACT_ADDRESS=
CONTRACT_NETWORK=sepolia
CONTRACT_START_BLOCK=
CONFIRMATIONS=3
LOOKBACK_BLOCKS=2000
POLL_INTERVAL=15000
PRIVATE_KEY=

# Auth / Rate limiting
JWT_SECRET=
JWT_EXPIRATION=24h
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# API surface controls
SWAGGER_ENABLED=false
CORS_ORIGIN=https://your-frontend.example.com
