# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://admin:your_password@localhost:5432/creator_split_db

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Blockchain Configuration
ETH_RPC_URL=https://sepolia.infura.io/v3/your-project-id
CONTRACT_ADDRESS=0x...  # Will be set after contract deployment
CONTRACT_NETWORK=sepolia
CONTRACT_START_BLOCK=   # Optional: starting block for event ingestion
CONFIRMATIONS=3         # Number of block confirmations before processing
LOOKBACK_BLOCKS=2000    # How many blocks to look back if no start block
POLL_INTERVAL=15000     # Polling interval in milliseconds (15s)
PRIVATE_KEY=            # Optional: only if backend needs to sign transactions

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRATION=24h

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Analytics Webhook Token
ANALYTICS_WEBHOOK_TOKEN=your-analytics-webhook-token

# API Surface controls
SWAGGER_ENABLED=true
CORS_ORIGIN=            # In production: https://your-domain.com
